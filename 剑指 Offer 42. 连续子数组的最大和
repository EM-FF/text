class Solution{

	public int maxSubArray(int[] nums){
		//状态定义：dp[i]表示以nums[i]结尾的连续子数组最大和
		//转移方程：dp[i] = (dp[i - 1] > 0)? dp[i - 1] +nums[i] : nums[i];
		//初始状态：dp[0] = nums[0]
		//返回值：dp数组中最大数
		//因为dp[i]只与dp[i-1]和nums[i]有关，所以可以用一个变量来表示

		int res = nums[0];
		int n = 0;//dp[i]
		int m = nums[0];//dp[i-1]

		for(int i = 1; i < nums.length; i++){
			n = (m > 0)? m + nums[i] : nums[i];
			m = n;
			res = Math.max(res,n);
		}
		return res;	
	}
}
